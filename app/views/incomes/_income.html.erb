<div id="<%= dom_id income %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= income.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Value:</strong>
    <%= income.value %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Comments:</strong>
    <%= income.comments %>
  </p>
<!--
  <p class="my-5">
    <strong class="block font-medium mb-1">Userid:</strong>
    <%= income.user_id %>
  </p>
-->

  <% if action_name != "show" %>
    <%= link_to "Show this income", income, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this income', edit_income_path(income), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
