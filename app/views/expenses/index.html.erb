<div class="w-full ml-4 mt-6">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Gastos</h1>
    <%= link_to 'Agregar gasto', new_expense_path, class: "text-white bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>
  </div>

  <div id="expenses" class="min-w-full">
    <%= pie_chart @expenses.group(:description).count() %>
    <%= render @expenses %>
  </div>
</div>
